<script>
/* NO BUTTON RUNS */
function moveNo() {
  const b = document.getElementById("no");
  b.style.top = Math.random() * 80 + "vh";
  b.style.left = Math.random() * 80 + "vw";
}

/* YES CLICK */
function yesClick() {
  document.body.innerHTML = `
    <div style="color:white;text-align:center;padding:30px;">
      <h1 id="type"></h1>
      <p>ğŸ’– From my heart to yours ğŸ’–</p>
    </div>
  `;

  const text =
  "From the first smile to this moment...\n" +
  "I choose you.\n" +
  "Not just today, but every day.\n" +
  "Happy Valentineâ€™s â¤ï¸";

  let i = 0;
  const t = setInterval(() => {
    document.getElementById("type").innerHTML += text.charAt(i);
    i++;
    if (i === text.length) clearInterval(t);
  }, 60);

  confetti();
}

/* CONFETTI */
function confetti() {
  for (let i = 0; i < 80; i++) {
    const c = document.createElement("div");
    c.className = "confetti";
    c.innerHTML = "ğŸ‰";
    c.style.left = Math.random() * 100 + "vw";
    c.style.top = "-10px";
    document.body.appendChild(c);
    setTimeout(() => c.remove(), 3000);
  }
}

/* COUNTDOWN */
function countdown() {
  const v = new Date("Feb 14, 2026 00:00:00").getTime();
  const now = new Date().getTime();
  const d = v - now;
  const days = Math.floor(d / (1000 * 60 * 60 * 24));
  document.getElementById("countdown").innerHTML =
    "â³ " + days + " days left for Valentineâ€™s Day";
}
countdown();

/* FLOATING HEARTS */
setInterval(() => {
  const h = document.createElement("div");
  h.className = "heart";
  h.innerHTML = "â¤ï¸";
  h.style.left = Math.random() * 100 + "vw";
  document.body.appendChild(h);
  setTimeout(() => h.remove(), 6000);
}, 300);
</script>

